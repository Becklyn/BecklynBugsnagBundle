{
    "name":         "becklyn/bugsnag-bundle",
    "description":  "This bundle provides a simple integration of Bugsnag into symfony.",
    "type":         "symfony-bundle",
    "homepage":     "https://github.com/Becklyn/BecklynBugsnagBundle",
    "license":      "BSD-3-Clause",
    "authors": [{
        "name":     "Becklyn Studios",
        "homepage": "http://becklyn.com/"
    }],
    "autoload": {
        "psr-4": { "Becklyn\\BugsnagBundle\\": "" }
    },
    "require": {
        "php": "^5.5 | ^7.0",
        "bugsnag/bugsnag": "^3.0",
        "symfony/http-kernel": "^2.8 | ^3.0",
        "symfony/security-core": "^2.8 | ^3.0",
        "symfony/dependency-injection": "^2.8 | ^3.0",
        "symfony/config": "^2.8 | ^3.0",
        "monolog/monolog": "^1.7",
        "twig/twig": "^1.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0"
    }
}
